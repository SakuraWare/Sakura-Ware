-- PLAYER TAB --
local PlayerTab = Window:AddTab("Player", "user")
local PlayerGroupbox = PlayerTab:AddLeftGroupbox("Walk Speed")

PlayerGroupbox:AddButton({
    Text = "Reset Walk Speed",
    Func = function()
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 16
    end,
    DoubleClick = false
})

PlayerGroupbox:AddInput("WalkSpeedInput", {
    Text = "Walk Speed",
    Default = "16",
    Numeric = true,
    Finished = true,
    Placeholder = "Enter walk speed...",
    Callback = function(Value)
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
    end
})

-- INFO TAB --
local InfoTab = Window:AddTab("Info", "info")
local LeftInfo = InfoTab:AddLeftGroupbox("Info")
local RightInfo = InfoTab:AddRightGroupbox("More Info")

RightInfo:AddLabel("Discord: Xhynii")
RightInfo:AddButton({
    Text = "Copy Discord Server Link",
    Func = function()
        setclipboard("https://discord.gg/Z6gMjCDJrm")
    end
})

RightInfo:AddLabel("Its Not The Best Bc I am")
RightInfo:AddLabel("New To Creating Scripts")
LeftInfo:AddLabel("Open/Close With Left Control")

-- SETTINGS TAB --
local SettingsTab = Window:AddTab("Setting", "settings")
local SettingsGroupbox = SettingsTab:AddLeftGroupbox("Setting")

SettingsGroupbox:AddDropdown("DpiDropdown", {
    Values = {"50", "75", "100", "125", "150"},
    Default = 3,
    Multi = false,
    Text = "Change DPI",
    Tooltip = "What DPI?",
    Callback = function(scale)
        Library:SetDPIScale(tonumber(scale))
    end
})

SettingsGroupbox:AddButton({
    Text = "Unload Menu",
    Func = function()
        Library:Notify("Unloading", 0.5)
        task.wait(0.7)
        Library:Unload()
    end
})
